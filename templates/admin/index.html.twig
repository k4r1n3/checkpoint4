{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center my-3">
        <h1 class="col-10 col-sm-6 bg-dark text-light text-center p-2 m-3 fw-bold">Mes projets</h1>
    </div>
    <div class="container">
        <div class="row d-flex py-2 text-dark">
        {% for project in projects %}
            <p>{{ project.title }}</p>
            <p>{{ project.description }} </p>
            <p>{{ project.tag.tags.name }} </p>
        {% endfor %}
        </div>
    </div>
{% endblock %}
