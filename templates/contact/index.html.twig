{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Contact{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center my-3">
        <h1 class="col-10 col-sm-6 bg-dark text-light text-center p-2 m-3 fw-bold">Contactez-moi</h1>
    </div>
    <div class="justify-content-center col-10 mx-auto mt-2 py-1 fw-bold text-dark">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}
        <button type="submit">Envoyer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
