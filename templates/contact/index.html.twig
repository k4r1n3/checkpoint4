{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Contact{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center my-3">
        <h1 class="col-10 col-sm-6 2 text-dark border-bottom border-dark text-center p-2 ">Une question ? <br>Contactez-moi</h1>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-8 mt-5 flex-wrap">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}
                <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-dark rounded fw-bold fs-5 mb-4">Envoyer</button>
                </div>
                {{ form_end(form) }}
        </div>
        </div>
    {% endblock %}
