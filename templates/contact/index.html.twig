{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Contact{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center my-3">
        <h1 class="col-10 col-sm-6 my-3 text-dark border-bottom border-dark text-center p-2 ">Une question ? <br>Contactez-moi</h1>
    </div>
    <div class="d-flex justify-content-center ">
        {{ form_start(form) }}
        <div class="text-dark py-2 col-6 mx-auto">
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
        </div>
        </div>
        <div class="d-flex justify-content-center my-3 p-2">
            <button type="submit" class="btn btn-outline-dark rounded fw-bold fs-5">Envoyer</button>
            {{ form_end(form) }}
        </div>

</div>
{% endblock %}
