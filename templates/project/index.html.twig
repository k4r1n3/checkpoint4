{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Portfolio{% endblock %}
{% block body %}

{#  <!-- Filtrer par tag-->
   <div>
        {% for tag in tags %}
            <p> {{ tag.name }} </p>
        {% endfor %}
   </div>
#}

<div class="container">
    <h1 class="text-yellow text-center p-3 m-5">Mes projets</h1>
        <div class="d-flex justify-content-center">
            <div class="row m-3">
                {% for project in projects %}
                <div class="text-dark card p-5 mx-auto p-3 text-center col-lg-4 col-sm-4">
                    <div class="card-body color-h3">
                        <img src="{{asset (vich_uploader_asset(project)) }}" alt="{{ project.title }}" class="img-fluid rounded mb-2"/>
                        <h3 class="card-title mb-3">{{ project.title }}</h3>
                        <p class="card-text fw-light">{{ project.description }}</p>
                        <p>Développé en :
                            {% for tag in project.tags %}
                                <span class="card-text fw-light p-2">{{ tag.name }}</span>
                            {% endfor %}
                        </p>
                    </div>
                    <a href="#" class="text-yellow text-decoration-underline">Site web</a>
                    <p class="text-center"><a href="#" target="_blank" class="text-yellow text-decoration-underline">Github</a></p>
                </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
