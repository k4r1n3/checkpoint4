<div class="row row-cols-1 row-cols-md-4 g-4 px-3 m-4">
    {% for project in projects %}
        <div class="col">
            <div class="card h-100">
                <img src="{{asset (vich_uploader_asset(project)) }}" class="card-img-top" alt="{{ project.title }}">
                <div class="card-body">
                    <h2 class="card-title fs-4">{{ project.title }}</h2>
                    <p class="card-text">{{ project.description }}</p>

                    <p>Développé en :
                        {% for tag in project.tags %}
                            <span class="card-text fw-light">{{ tag.name }} </span>
                        {% endfor %}
                    </p>
                    <a href="{{asset (vich_uploader_asset(project)) }}" class="btn btn-outline-dark"><i class="fas fa-eye doc-show"></i></a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
